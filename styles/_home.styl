.home-page
  .actions
    text-align center
    padding 70px 0 130px
    &.footer
      padding 50px 0 0
    *
      margin 0 50px

  .video
    background black
    width 800px
    height 450px
    position absolute
    z-index 10
    left 50%
    margin-left -400px
    cursor pointer
    &:hover
      .play
        opacity 0.6
    .play
      background url('/img/play.svg')
      background-size 100%
      width 120px
      height 120px
      position absolute
      top 50%
      left 50%
      margin -60px 0 0 -60px
    iframe
      display none

  section:first-of-type
    margin-top 250px
    padding-top 400px
