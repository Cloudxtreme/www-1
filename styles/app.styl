*
  margin 0
  padding 0
  box-sizing border-box

html
  height 100%

body
  background-image:
    url('/img/bg.png'),
    linear-gradient(bgLight, bgDark)
  background-repeat no-repeat
  background-size cover
  background-position top center
  background-color bgDark
  min-height 100%
  font-family 'Lato', sans-serif
  font-weight 300
  font-size 1.1em
  line-height normal

section
  padding 230px 0
  position relative
  text-align center

  &.col-2
    display flex
    justify-content space-between
    align-items center
    .block
      display inline-block
      text-align left
      overflow hidden
      &:first-child
        margin-left 150px
      &:last-child
        padding-right 100px
        img
          position relative
          right -200px
          max-width 600px
      img
        width 100%
  &.dark
    background url('/img/bg.png') no-repeat
    background-size cover
    background-position bottom center
  &.white
    background white
    position relative
    padding 150px 0
    p
      color bgDark
    &:before
      content ''
      background white
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index -1
      transform skewY(-4deg)
      transform-origin bottom left
      backface-visibility hidden
    &:after
      content ''
      background white
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index -1
      transform skewY(4deg)
      transform-origin top left
      backface-visibility hidden
