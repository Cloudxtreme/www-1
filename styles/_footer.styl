footer
  padding 0 85px 50px 85px
  display flex
  justify-content space-between
  font-size .9em

  .logo
    width 60px
    height 60px

  .links
    list-style-type none
    display inline-block
    line-height 28px
    li:first-child
      font-weight 400
      color white
      margin-bottom 15px
    a
      color misty

  .subscribe
    label
      color white
      display block
      font-weight 400
      margin-bottom 20px

    ul
      display inline-block
    .social
      float left
      list-style-type none
      color darkGray
      margin-top 20px
      margin-right 30px
      font-size 1.3em
      li
        display inline-block
        margin 0 5px
        &:first-child
          margin-left 0
      a
        color darkGray
    .copyright
      float right
      list-style-type none
      color darkGray
      margin-top 26px
      text-align right
      font-size .8em
      li
        display inline-block
        &:not(:last-child):not(.social):after
          content '\00b7'
          margin 0 10px
      a
        color darkGray
