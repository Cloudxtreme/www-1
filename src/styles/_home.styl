.home-page
  .heading
    padding 0 30px 100px

  .actions
    text-align center
    padding 70px 0 130px
    &.footer
      padding 50px 0 0
    *
      margin 0 50px

  .video
    background black
    border-radius 4px
    width 800px
    height 450px
    position absolute
    z-index 10
    left 50%
    margin-left -400px
    cursor pointer
    overflow hidden
    box-shadow 0 2px 5px rgba(0, 0, 0, .3)
    display flex
    justify-content center
    align-items center
    &:hover
      .play
        opacity 0.6
    +below(res-mobile)
      width 100%
      margin 0
      position relative
      left 0
    .play
      background url('/img/play.svg')
      background-size 100%
      width 120px
      height 120px
      // position absolute
      // top 50%
      // left 50%
      // margin -60px 0 0 -60px
    iframe
      display none

  section:first-of-type
    margin-top 280px
    padding-top 250px
    +below(res-mobile)
      margin-top 120px
      padding-top 80px

  section:last-of-type /* temporary until footer is put back */
    padding-bottom 50px

  .hosting-img
    max-width 350px
  .dev-toolkit
    img
      position absolute

.signup-form
  margin-top 100px
