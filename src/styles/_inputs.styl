.inpt
  border none
  border-radius 4px
  width 300px
  height 45px
  padding 0 15px
  outline none
  font-size .9em
  font-weight 300
  color bgDark
  letter-spacing .8px
  margin-right 10px
  +below(res-mobile)
    width 100%
    margin-bottom 10px
    margin-right 0

  &::-webkit-input-placeholder
    color lightGray
  &:-moz-placeholder
    color lightGray
  &::-moz-placeholder
    color lightGray
  &:-ms-input-placeholder
    color lightGray

.form-inside-btn
  position relative
  input
    margin 0
  button
    position absolute
    right 10px
    top 10px
    bottom 10px
