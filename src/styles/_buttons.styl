.btn
  background none
  height 45px
  padding 0 30px
  color orange
  border 2px solid orange
  border-radius 4px
  font-weight 400
  font-size .9em
  display inline-block
  box-sizing border-box
  &:hover
    opacity 0.6
  +below(res-mobile)
    width 100%

.btn-sml
  font-weight 400
  color orange
  border-bottom 2px solid orange
  padding-bottom 8px

.btn-white
  color white
  border-color white

.btn-inline
  color white
  background orange
  border-radius 4px
  border none
  font-size .7em
  font-weight 400
  padding 0 8px
  &:hover
    opacity 0.8
